{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "include": [
    "modules/**/*.ts",
    "modules/**/*.d.ts",
    "modules/**/*.vue",
    "demo/**/*.ts",
    "demo/**/*.d.ts",
    "demo/**/*.vue"
  ]
}
